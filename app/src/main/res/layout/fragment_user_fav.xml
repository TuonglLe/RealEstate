<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="#e2e1e1"
    >
    <View
        android:id="@+id/padding_view"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="8dp"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_below="@id/padding_view"
        style="@style/Toolbar"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_estates_recycler_view"
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/fragment_user_fav_text_recycler_view_margin_left_right"
        android:layout_marginRight="@dimen/fragment_user_fav_text_recycler_view_margin_left_right"

        android:layout_height="match_parent"/>

</RelativeLayout>
