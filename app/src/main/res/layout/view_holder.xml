<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/on_screen_view_holder_width"
    android:layout_height="@dimen/on_screen_view_holder_height"
    android:layout_margin="@dimen/on_screen_view_holder_text_view_card_margin_left_right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/whole_estate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/view_pager"
                            android:layout_alignParentTop="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/on_screen_view_holder_view_pager_height" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/text_view_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginBottom="@dimen/on_screen_view_holder_text_view_card_top_bottom"
                                    android:layout_marginLeft="@dimen/on_screen_view_holder_text_view_card_margin_left_right"
                                    android:layout_marginRight="@dimen/on_screen_view_holder_text_view_card_margin_left_right"
                                    android:textStyle="bold"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    tools:text="Hello" />

                                <TextView
                                    android:id="@+id/text_view_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="@dimen/on_screen_view_holder_text_view_card_top_bottom"
                                    android:layout_marginRight="@dimen/on_screen_view_holder_text_view_card_margin_left_right"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
                        </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp" />
        </RelativeLayout>

</android.support.v7.widget.CardView>